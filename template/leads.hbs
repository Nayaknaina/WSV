            myBtn.classList.add('btn-primary')

            allBtn.classList.add('btn-outline-primary')
            allBtn.classList.remove('btn-primary')
        }
        function showAllLeads(t) {
            let myLeadsBox = document.querySelector('#myLeads')
            let allLeadsBox = document.querySelector('#allLeads')
            let myBtn = document.querySelector('#my-lead-btn')
            let allBtn = document.querySelector('#all-lead-btn')

            allLeadsBox.style.display = 'block'
            myLeadsBox.style.display = 'none'

            myBtn.classList.remove('btn-primary')
            myBtn.classList.add('btn-outline-primary')

            allBtn.classList.remove('btn-outline-primary')
            allBtn.classList.add('btn-primary')
        }

        function openRemarkPopUp(id) {
            // console.log(id)
            let timelineBox = document.querySelector(`#timeline${id}`)
            timelineBox.classList.toggle('openTimeline')
        }

        function openAddRemarkForm(id) {
            // console.log(id)
            let form = document.querySelector(`#remark-form-list${id}`)
            form.style.display = 'block'
        }
        function closeAddRemarkForm(id) {
            let form = document.querySelector(`#remark-form-list${id}`)
            form.style.display = 'none'
        }
    </script>


