<style>
    /* Global reset and basic styling */
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: Arial, sans-serif;
        background-color: #f0f0f0;
       
    }

    /* Modal (Popup) Styling */
    .custom-modal {
        display: none;
        position: fixed;
        z-index: 9999999999999;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        justify-content: center;
        align-items: center;
    }

    .modal-content {
        background-color: white;
        padding: 20px;
        border-radius: 8px;
        max-width: 800px;
        width: 100%;
    }

    .modal-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }

    .modal-header h2 {
        margin: 0;
    }

    .close-btn {
        cursor: pointer;
        font-size: 24px;
        background: none;
        border: none;
        color: rgb(255, 255, 255);
        background-color: #f00;
        border-radius: 4px;
        padding: 0px 10px;
    }

    /* Form Styling */
    .form-group {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        margin-bottom: 20px;
    }

    .form-group div {
        width: 48%;
        margin-bottom: 10px;
    }

    .form-group div label {
        display: block;
        margin-bottom: 0px;
    }

    .form-group div input {
        width: 100%;
        padding: 4px 8px;
        border: 1px solid #ccc;
        border-radius: 4px;
    }
    .form-group div textarea {
        width: 100%;
        padding: 4px 8px;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    /* Custom validation styles */
    input:invalid {
        border-color: red;
    }

    input:valid {
        border-color: green;
    }

    @media (max-width: 600px) {
        .form-group div {
            width: 100%;

        }

        .form-group {
            overflow: auto;
            max-height: 470px;
        }
    }
</style>

