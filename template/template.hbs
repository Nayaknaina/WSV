<style>
  .box-form-container {
    height: 90%;
    width: 90%;
    position: absolute;
    left: 10%;
    top: 5%;

    z-index: 99;

    display: none;
    justify-content: center;
    align-items: center;

  }


  .box-form {
    min-width: 300px;
    display: none;
    width: 400px;
    height: auto;
    background-color: #fff;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    padding: 20px;
  }


  .box-form input,
  .box-form textarea,
  .box-form label {
    display: block;
    width: 100%;
    outline: none;
    margin-bottom: 15px;
    border: 1px solid #ddd;
  }
.box-form label{
  border: none
}
  .box-form input:disabled,
  .box-form textarea:disabled {
    background-color: #e9ecef;
  }

  .box-form input[type="checkbox"] {
    width: auto;
    display: inline-block;
  }

  .box-form .checkbox-label {
    display: inline-block;
    margin-right: 15px;
  }

  .buttons {
    display: flex;
    justify-content: flex-end;
  }

  .buttons button {
    padding: 10px 20px;
    border: none;
    border-radius: 5px;
    background-color: #007bff;
    color: #fff;
    cursor: pointer;
    margin-left: 10px;
    transition: background-color 0.3s;
  }

  .buttons button:hover {
    background-color: #0056b3;
  }

  .buttons button[disabled] {
    background-color: #ccc;
    cursor: not-allowed;
  }

  .box-form input,
  .box-form textarea {
    padding: 5px;
    font-size: 1rem;
    border: 1px solid rgb(40, 40, 40);
    border-radius: 6px;
  }
</style>


<style>
  .img-bx {
