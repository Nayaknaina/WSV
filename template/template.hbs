        function openForm(id) {
          let container = document.querySelector('.box-form-container')
          let form = document.querySelector(`#form${id}`)

          container.style.display = 'flex'
          form.style.display = 'block'
          document.querySelector('#blurkro').style.filter = 'blur(10px)'

        }

        function openForm5() {
          let container = document.querySelector('.box-form-container')
          let form = document.querySelector('#form5')

          container.style.display = 'flex'
          form.style.display = 'block'
          document.querySelector('#blurkro').style.filter = 'blur(10px)'
        }

        function closeFormContainer() {
          let container = document.querySelector('.box-form-container')
          let forms = document.querySelectorAll('.box-form')
          container.style.display = 'none'

          document.querySelector('#blurkro').style.filter = 'blur(0)'
          forms.forEach((form) => {
            form.style.display = 'none'
          })


